<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:background="@drawable/customborder"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/b31"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="Exciting Offers ðŸ’¥ðŸ’¥ Coming SoonðŸ¤©ðŸ¤©"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7"
            android:weightSum="6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Select one..."
                android:textAlignment="center"
                android:textSize="50sp"
                android:fontFamily="@font/berkshire_swash"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights,RtlCompat"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                tools:ignore="NestedWeights"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:src="@drawable/vegfood"
                    android:scaleType="fitXY"/>
                <Button
                    android:id="@+id/purevegmess"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="PURE VEG MESS>>>"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                tools:ignore="NestedWeights"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:id="@+id/vegnonvegmess"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text=" VEG/Non-Veg MESS>>>"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:src="@drawable/nonvegfood"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:weightSum="3"
        android:orientation="horizontal"
        android:background="@drawable/customborder1"
        android:paddingBottom="5dp"
        >
        <Button

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Home"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            tools:ignore="NestedWeights,SmallSp" />
        <Button
            android:id="@+id/b16"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Sign out"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            tools:ignore="SmallSp" />
        <Button

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="About Us"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            tools:ignore="SmallSp" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>